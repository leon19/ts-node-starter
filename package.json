{
  "name": "ts-node-starter",
  "version": "0.0.0",
  "description": "Start pack for TypeScript under NodeJS",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Lorens Le√≥n",
    "email": "lorensleon@gmail.com"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/ts-node-starter"
  },
  "dependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "prettier": "^1.17.0",
    "standard-version": "^5.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "build": "tsc",
    "build:esm": "tsc --module es2015 --outDir esm",
    "clean": "rm -rf lib esm reports",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc yarn test",
    "lint": "tslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "prettier --write '{src,tests}/**/*.{js,ts}' && yarn lint --fix",
    "health": "yarn && yarn clean && yarn lint && yarn build --noEmit && yarn test --reporter dot",
    "ci": "yarn && yarn lint && yarn build --noEmit && yarn test",
    "prepublishOnly": "yarn clean && concurrently 'yarn build' 'yarn build:esm'",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.{js,ts}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ],
      "*.{md,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "tsconfig.json"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "lib/**",
      "esm/**",
      "lib/**/*.test.ts",
      "tests/**",
      "node_modules/**"
    ],
    "reporter": [
      "clover",
      "cobertura",
      "html",
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "clean": true,
    "temp-dir": "reports/.nyc_ouptut",
    "report-dir": "reports/coverage",
    "all": true
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "tabWidth": 2
  }
}
