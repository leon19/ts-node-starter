{
  "name": "ts-node-starter",
  "version": "0.0.0",
  "description": "Start pack for TypeScript under NodeJS",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Lorens Le√≥n <lorensleon@gmail.com>",
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/ts-node-starter"
  },
  "dependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@swc/core": "^1.2.160",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "c8": "^7.11.0",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "prettier": "^2.6.0",
    "standard-version": "^9.3.2",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.2"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:commonjs": "tsc --project tsconfig.build.json ",
    "build:esm": "tsc --project tsconfig.build.json --module es2022 --outDir esm",
    "clean": "rm -rf lib esm .tmp",
    "test": "mocha --require tests/entry.js 'tests/**/*.{test,spec}.ts'",
    "cover": "c8 npm test",
    "lint": "eslint --fix '{src,tests}/**/*.{js,ts}' && prettier --write '.{c8rc,eslintrc,lintstagedrc,prettierrc}' '*.{md,json}'",
    "ci": "npm ci && npm run lint && npm run build --noEmit && npm test",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version",
    "prepare": "husky install || exit 0"
  }
}
