{
  "name": "ts-node-starter",
  "version": "0.0.0",
  "description": "Start pack for TypeScript under NodeJS",
  "main": "build/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Lorens LeÃ³n",
    "email": "lorensleon@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/ts-node-starter"
  },
  "dependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "conventional-changelog-cli": "^1.3.8",
    "conventional-recommended-bump": "^1.2.0",
    "mocha": "^5.0.0",
    "npm-check-updates": "^2.14.0",
    "nsp": "^3.1.0",
    "nsp-reporter-checkstyle": "^1.1.0",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build reports types",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "test:xunit": "yarn test --reporter xunit --reporter-options output=reports/test-results.xml || exit 0",
    "cover": "nyc yarn test",
    "cover:xunit": "nyc yarn test:xunit",
    "lint": "tslint '{src,tests}/**/*.ts'",
    "lint:checkstyle": "mkdir -p reports && yarn lint --format checkstyle --out reports/lint-checkstyle.xml --force",
    "lint:format": "prettier --write '{src,tests}/**/*.ts' && yarn lint --fix",
    "security": "nsp check",
    "security:checkstyle": "mkdir -p reports && yarn --silent security --warn-only --reporter checkstyle > reports/security-checkstyle.xml",
    "git:hooks": "cp -rf scripts/git-pre-commit .git/hooks/pre-commit",
    "git:precommit": "scripts/git-pre-commit",
    "npm:install:clean": "rm -rf node_modules yarn.lock && yarn",
    "npm:update": "ncu -a && yarn npm:install:clean",
    "npm:package": "scripts/npm-build && npm pack build && rm -rf build",
    "health": "yarn && yarn clean && yarn lint && yarn security && yarn build --noEmit && yarn test --reporter dot",
    "ci": "yarn && yarn lint:checkstyle && yarn security:checkstyle && yarn build --noEmit && yarn cover:xunit",
    "release": "scripts/git-release"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "build/**",
      "tests/**",
      "types/**",
      "node_modules/**"
    ],
    "reporter": [
      "clover",
      "cobertura",
      "html",
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "clean": true,
    "tempDirectory": "reports/.nyc_ouptut",
    "reportDir": "reports/coverage",
    "all": true
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "tabWidth": 2
  }
}
