{
  "name": "ts-node-starter",
  "version": "0.0.0-development",
  "description": "Start pack for TypeScript under NodeJS",
  "main": "dist/commonjs/index.js",
  "types": "dist/commonjs/index.d.ts",
  "license": "MIT",
  "author": "Lorens Le√≥n <lorensleon@gmail.com>",
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/ts-node-starter"
  },
  "scripts": {
    "build": "tsc",
    "build:commonjs": "tsc --project tsconfig.commonjs.json",
    "clean": "rm -rf .tmp dist",
    "test": "mocha 'src/**/*.{test,spec}.ts'",
    "cover": "c8 npm test",
    "lint": "eslint --fix 'src/**/*.{js,ts}' && prettier --write '*.{md,json}'",
    "prepublishOnly": "npm run clean && npm run build:commonjs",
    "prepare": "husky install || exit 0"
  },
  "dependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.4"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.5"
  }
}
