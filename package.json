{
  "name": "ts-node-starter",
  "version": "0.0.0",
  "description": "Start pack for TypeScript under NodeJS",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Lorens Le√≥n <lorensleon@gmail.com>",
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/ts-node-starter"
  },
  "dependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typescript": "~4.0.5"
  },
  "scripts": {
    "build": "concurrently 'yarn:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc yarn test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix",
    "health": "yarn && yarn clean && yarn lint && yarn build --noEmit && yarn test --reporter dot",
    "ci": "yarn && yarn lint && yarn build --noEmit && yarn test",
    "prepublishOnly": "yarn clean && yarn build",
    "release": "standard-version"
  }
}
