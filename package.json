{
  "name": "ts-node-starter",
  "version": "0.0.0-development",
  "description": "Start pack for TypeScript under NodeJS",
  "main": "dist/commonjs/index.js",
  "types": "dist/commonjs/index.d.ts",
  "license": "MIT",
  "author": "Lorens Le√≥n <lorensleon@gmail.com>",
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/ts-node-starter"
  },
  "dependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "standard-version": "^9.3.2",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.4"
  },
  "scripts": {
    "build": "tsc",
    "build:commonjs": "tsc --project tsconfig.commonjs.json",
    "clean": "rm -rf .tmp dist",
    "test": "mocha 'tests/**/*.{test,spec}.ts'",
    "cover": "c8 npm test",
    "lint": "eslint --fix '{src,tests}/**/*.{js,ts}' && prettier --write '*.{md,json}'",
    "prepublishOnly": "npm run clean && npm run build:commonjs",
    "release": "standard-version",
    "prepare": "husky install || exit 0"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
